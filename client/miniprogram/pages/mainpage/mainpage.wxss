
.divLine{
  background: #cbd2dc;
  width: 100%;
  height: 1rpx;
 }

/*横向布局  */
.layout_horizontal{
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
  padding-bottom: 10px;
}

.td {
  display: flex;
  align-items: center;
  justify-content: center;
}


.list{
  border-top:1px solid #EDEDED; 
  display: flex;
  justify-content: flex-start;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding-left: 5%;
}

.list .item{
  padding-top: 15px;
}
.price{
  flex-direction: column;
  display: flex;
  margin:0 10px;
  justify-content:space-around;
}
.font {
  display: block;
  text-align: center;
  width: 100%;
  font-size: 10px;
  color: #333;
  padding-top: 10px;
}

image {
  width: 60px;
  height:60px;
}
/*纵向布局  */
.layout_vertical{
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}


 